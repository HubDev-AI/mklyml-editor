{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@mklyml/core": ["../mkly/src/index.ts"],
      "@mklyml/kits/newsletter": ["../mkly-kits/newsletter/src/index.ts"],
      "@mklyml/kits/docs": ["../mkly-kits/docs/src/index.ts"],
      "@mklyml/plugins/email": ["../mkly-plugins/email/src/index.ts"],
      "@mklyml/plugins/docs": ["../mkly-plugins/docs/src/index.ts"],
      "@mklyml/plugins/seo": ["../mkly-plugins/seo/src/index.ts"],
      "@mklyml/plugins/newsletter-ai": ["../mkly-plugins/newsletter-ai/src/index.ts"]
    }
  },
  "include": ["src"]
}
