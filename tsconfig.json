{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@milkly/mkly": ["../mkly/src/index.ts"],
      "@mkly-kits/newsletter": ["../mkly-kits/newsletter/src/index.ts"],
      "@mkly-plugins/email": ["../mkly-plugins/email/src/index.ts"]
    }
  },
  "include": ["src"]
}
